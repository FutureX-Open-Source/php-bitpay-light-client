{
    "name": "futurex-open-source/php-bitpay-light-client",
    "description": "Light version of the PHP library for the new cryptographically secure BitPay API",
    "license": "MIT",
    "minimum-stability": "stable",
    "keywords": [
        "bitpay",
        "bitcoin",
        "cash",
        "payment",
        "gateway"
    ],
    "homepage": "https://github.com/futurex-open-source/php-bitpay-light-client",
    "require": {
        "php": "^7.1|^8.0",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "authors": [
        {
            "name": "Antonio Buedo",
            "email": "solutions-engineering@bitpay.com"
        },
        {
            "name": "Kitcart Team",
            "email": "engineers@mykitcart.net"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BitPaySDKLight\\Test\\": "tests/"
        }
    }
}
